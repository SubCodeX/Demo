package scx.fgu.graphics;

import java.util.Random;

public class Screen {

	private int width;
	private int height;
	public int[] pixels;
	
	public int[] tiles = new int[64 * 64];
	
	private Random random = new Random();
	
	public Screen(int width, int height) {
		this.width = width;
		this.height = height;
		pixels = new int[width*height];
		
		for (int i = 0; i < 64 * 64; i+=1) {
			tiles[i] = random.nextInt(0xFFFFFF);
		}
	}
	
	public void clear() {
		for (int i = 0; i < pixels.length; i++) {
			pixels[i] = 0;
		}
	}
	
	public void render() {
		for (int y = 0; y < height; y++) {
			int yShift = y + 15;
			//if(yShift < 0 || yShift >= height) break;
			for (int x = 0; x < width; x++) {
				int xShift = x + 8;
				//if (xShift < 0 || xShift >= width) break;
				int tileIndex = ((xShift >> 4) & 63) + ((yShift >> 4) & 63) * 64; // ">> 4" = "/ 16"
				pixels[x + y * width] = tiles[tileIndex];
			}
		}
	}
	
}
