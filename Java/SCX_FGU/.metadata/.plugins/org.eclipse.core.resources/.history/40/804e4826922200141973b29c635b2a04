package scx.fgu.entity.mob;

import scx.fgu.input.Keyboard;

public class Player extends Mob {
	
	private Keyboard input;

	public Player(Keyboard input) {
		this.input = input;
	}
	
	public Player(int x, int y, Keyboard input) {
		this.x = x;
		this.y = y;
		this.input = input;
	}
	
	public void update() {
		if (input.up) y -= 1;
		if (input.down) y += 1;
		if (input.left) x -= 1;
		if (input.right) x += 1;
	}
	
	public void render() {
	}
	
}
